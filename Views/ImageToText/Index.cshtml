@{
    ViewData["Title"] = "Converter Imagem para Texto";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="post" asp-action="Convert" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Selecione uma imagem:</label>
            <input type="file" name="image" class="form-control" accept="image/*" required>
        </div>
        <button type="submit" class="btn btn-primary">Converter</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    @if (ViewBag.ExtractedText != null)
    {
        <div class="mt-4">
            <h3>Texto Extra√≠do:</h3>
            <pre>@ViewBag.ExtractedText</pre>
        </div>
    }
</div>
