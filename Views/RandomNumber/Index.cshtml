@model dynamic
@{
    ViewData["Title"] = "Gerador de Números Aleatórios";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    <form method="post" asp-action="Generate">
        <div class="mb-3">
            <label for="quantity" class="form-label">Quantidade de números:</label>
            <input type="number" id="quantity" name="quantity" class="form-control" min="1" required>
        </div>
        <div class="mb-3">
            <label for="minValue" class="form-label">Valor Mínimo:</label>
            <input type="number" id="minValue" name="minValue" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="maxValue" class="form-label">Valor Máximo:</label>
            <input type="number" id="maxValue" name="maxValue" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Gerar Números</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    @if (ViewBag.GeneratedNumbers != null)
    {
        <div class="alert alert-success mt-3">
            <strong>Números Gerados:</strong> @string.Join(", ", ViewBag.GeneratedNumbers)
        </div>
    }
</div>
